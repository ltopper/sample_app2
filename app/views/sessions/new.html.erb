<h1>Sign in</h1>
<%= form_for(:session, :url => sessions_path) do |f| %>
  <div class="field">
	<!-- Label field for Email -->
	<%= f.label :email %><br />
	<!-- Input field for email -->
	<%= f.text_field :email %>
  </div>
  <div class="field">
	<%= f.label :password %><br />
	<%= f.password_field :password %><br />
  </div>
  <div class="actions">
	<!-- Submits a params hash with :password, and :email included params[:session][:email][:password] -->
	<%= f.submit "Sign in" %>
  </div>
<% end %>

<!-- test: 'New user?' then link to text 'Sign up now!' the link = 
signup_path generated by the match call in config/routes.rb 
		Style <p> defined in stylesheets blueprint, or custom, find it-->
<p> New user? <%= link_to "Sign up now!", signup_path %></p>